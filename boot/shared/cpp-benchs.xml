<config>
    <mods>
        <mod name="fs" file="bench.img" />
    </mods>
    <kernel args="kernel" />
    <dom>
        <app args="root">
            <dom>
                <app args="m3fs mem" daemon="1">
                    <serv name="m3fs" />
                    <mod name="fs" />
                </app>
                <app args="pipes" daemon="1">
                    <serv name="pipes" />
                </app>
            </dom>
            <dom>
                <app args="pager">
                    <sess name="m3fs" />
                    <mod name="fs" perm="r" />
                    <tiles type="core" count="1" />
                    <app args="/bin/cppbenchs">
                        <mount fs="m3fs" path="/" />
                        <sess name="pipes" />
                        <tiles type="core" count="2" />
                    </app>
                </app>
            </dom>
        </app>
    </dom>
</config>
