<config>
    <mods>
        <mod name="fs" file="default.img" />
    </mods>
    <kernel args="kernel" />
    <dom>
        <app args="root">
            <app args="pipes" daemon="1">
                <serv name="pipes" />
            </app>
            <dom>
                <app args="m3fs mem" daemon="1">
                    <serv name="m3fs" />
                    <mod name="fs" />
                </app>
            </dom>
            <dom tile="boom|core">
                <app args="pager">
                    <sess name="m3fs" />
                    <mod name="fs" perm="r" />
                    <app args="/bin/rustunittests">
                        <mount fs="m3fs" path="/" />
                        <sess lname="m3fs-clone" gname="m3fs" />
                        <sess name="pipes" />
                        <serv name="test" />
                        <sess name="test" dep="false" />
                        <tiles type="boom|core" count="2" />
                    </app>
                </app>
            </dom>
        </app>
    </dom>
</config>
